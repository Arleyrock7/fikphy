doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title= title
    link(rel="stylesheet", href="static/css/bootstrap.css")
    link(rel='stylesheet', href='static/css/main.css')
    
  body
    header
      include ./nav.pug
    
    .fullscreen-bg
      video.fullscreen-bg__video(loop='', muted='', autoplay='', poster='img/videoframe.jpg')
        source(src='video/big_buck_bunny.webm', type='video/webm')
        source(src='static/img/background/main.mp4', type='video/mp4')
        source(src='video/big_buck_bunny.ogv', type='video/ogg')      
      
      
    section.texto_principal
      h1  La plataforma para profesionales de la fotografía
      span.texto_descripcion Ghost is a fully open source, hackable platform for building and running <p> a modern online publication. We power blogs, magazines and <p>journalists from Zappos to Sky News.
      ul.botones
        li.btn_uno 
          a(href='#') Búsqueda rápida
        li.btn_dos
          a(href='#') Saber más
    
    
    - var nombre_fotografos = ['fotografo_1', 'fotografo_2', 'fotografo_3', 'fotografo_4']
    - var opinion_fotografos = ['Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et ', 'Opinion_fotografo_2', 'Opinion_fotografo_3', 'Opinion_fotografo_4']
    section.row.testimonios
      .container
        each nombre in nombre_fotografos
          .col-xs-12.col-sm-6.col-md-3.col-lg-3
            h4.nombre_fotografo Hola, soy #{nombre} 
              //img(src='static/img/1.png')
            span.testimonio
            each opinion in opinion_fotografos
              p #{opinion}
                   
                
        
                  
    
                  
    script(src='static/js/jquery-3.2.1.min.js')
    script(src='static/js/bootstrap.min.js')
    
    footer
      -var pie_pagina = ['Contenido descripción', 'contenido_2', 'contenido_3', 'contenido_4']
      section.row.pie
        .container
          each contenidos in pie_pagina
             .col-xs-12.col-sm-6.col-md-3.col-lg-3
               span.titulo #{contenidos}
               
    
